---
export const prerender = false;
---

<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Terminverwaltung | Atelier Auszeit</title>
  <link rel="stylesheet" href="/admin-styles.css">
</head>
<body>
  <div id="login-screen" class="login-container">
    <div class="login-box">
      <h1>üé® Admin Login</h1>
      <p>Atelier Auszeit</p>
      <form id="login-form">
        <div class="form-group">
          <label for="username">Benutzername</label>
          <input type="text" id="username" name="username" value="admin" required>
        </div>
        <div class="form-group">
          <label for="password">Passwort</label>
          <input type="password" id="password" name="password" required>
        </div>
        <button type="submit" class="btn btn-primary">Anmelden</button>
        <div id="login-error" class="error-message hidden"></div>
      </form>
    </div>
  </div>

  <div id="admin-panel" class="admin-container hidden">
    <header class="admin-header">
      <h1>üé® Terminverwaltung</h1>
      <button id="logout-btn" class="btn btn-secondary">Abmelden</button>
    </header>

    <main class="admin-main">
	      <section class="add-slot-section">
	        <h2 id="slot-form-title">Neuen Termin hinzuf√ºgen</h2>
	        <form id="add-slot-form">
	          <div class="form-row">
	            <div class="form-group">
	              <label for="slot-date">Datum</label>
	              <input type="date" id="slot-date" name="date" required>
	            </div>
	            <div class="form-group">
	              <label for="slot-start-time">Beginn</label>
	              <input type="time" id="slot-start-time" name="startTime" required>
	            </div>
	            <div class="form-group">
	              <label for="slot-end-time">Ende</label>
	              <input type="time" id="slot-end-time" name="endTime" required>
	            </div>
	            <div class="form-group">
	              <label for="slot-capacity">Max. Personen</label>
	              <input type="number" id="slot-capacity" name="maxCapacity" min="1" max="20" value="15" required>
	            </div>
	            <div class="form-group">
	              <label for="slot-initial-booked">Bereits gebuchte Pl√§tze</label>
	              <input type="number" id="slot-initial-booked" name="initialBooked" min="0" max="20" value="0">
	            </div>
	          </div>
	          <div class="form-actions">
	            <button type="submit" class="btn btn-primary" id="slot-submit-btn">Termin hinzuf√ºgen</button>
	            <button type="button" class="btn btn-secondary hidden" id="cancel-edit-btn">Bearbeitung abbrechen</button>
	          </div>
	        </form>
	      </section>

      <section class="slots-section">
        <h2>Verf√ºgbare Termine</h2>
        <div id="slots-loading" class="loading">Lade Termine...</div>
        <div id="slots-list" class="slots-list hidden"></div>
        <div id="no-slots" class="no-data hidden">Keine Termine vorhanden</div>
      </section>
    </main>
  </div>

	  <script>
	    let authCredentials = '';
	    let editingSlotId: string | null = null;

    // Login-Handler
    document.getElementById('login-form')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(e.target as HTMLFormElement);
      const username = formData.get('username');
      const password = formData.get('password');

      authCredentials = btoa(`${username}:${password}`);

      try {
        const response = await fetch('/api/admin/slots', {
          headers: {
            'Authorization': `Basic ${authCredentials}`
          }
        });

        if (response.ok) {
          document.getElementById('login-screen')?.classList.add('hidden');
          document.getElementById('admin-panel')?.classList.remove('hidden');
          loadSlots();
        } else {
          const errorEl = document.getElementById('login-error');
          if (errorEl) {
            errorEl.textContent = 'Ung√ºltige Anmeldedaten';
            errorEl.classList.remove('hidden');
          }
        }
      } catch (error) {
        console.error('Login error:', error);
      }
    });

    // Logout
    document.getElementById('logout-btn')?.addEventListener('click', () => {
      authCredentials = '';
      document.getElementById('admin-panel')?.classList.add('hidden');
      document.getElementById('login-screen')?.classList.remove('hidden');
      (document.getElementById('login-form') as HTMLFormElement)?.reset();
    });

	    // Termin hinzuf√ºgen / bearbeiten
	    document.getElementById('add-slot-form')?.addEventListener('submit', async (e) => {
	      e.preventDefault();
	      const form = e.target as HTMLFormElement;
	      const formData = new FormData(form);

	      const baseData = {
	        date: formData.get('date'),
	        startTime: formData.get('startTime'),
	        endTime: formData.get('endTime'),
	        maxCapacity: formData.get('maxCapacity')
	      };

	      try {
	        let response: Response;

	        if (editingSlotId) {
	          // Vorhandenen Termin aktualisieren
	          const updatePayload = {
	            id: editingSlotId,
	            ...baseData
	          };

	          response = await fetch('/api/admin/slots', {
	            method: 'PUT',
	            headers: {
	              'Authorization': `Basic ${authCredentials}`,
	              'Content-Type': 'application/json'
	            },
	            body: JSON.stringify(updatePayload)
	          });
	        } else {
	          // Neuen Termin anlegen
	          const data = {
	            ...baseData,
	            initialBooked: formData.get('initialBooked') || '0'
	          };

	          response = await fetch('/api/admin/slots', {
	            method: 'POST',
	            headers: {
	              'Authorization': `Basic ${authCredentials}`,
	              'Content-Type': 'application/json'
	            },
	            body: JSON.stringify(data)
	          });
	        }

	        if (response.ok) {
	          form.reset();
	          resetSlotFormState();
	          loadSlots();
	        } else {
	          const errorText = await response.text().catch(() => '');
	          console.error('Error saving slot:', errorText);
	          alert('Fehler beim Speichern des Termins');
	        }
	      } catch (error) {
	        console.error('Error saving slot:', error);
	        alert('Fehler beim Speichern des Termins');
	      }
	    });

	    // Bearbeitung abbrechen
	    document.getElementById('cancel-edit-btn')?.addEventListener('click', () => {
	      const form = document.getElementById('add-slot-form') as HTMLFormElement | null;
	      if (form) {
	        form.reset();
	      }
	      resetSlotFormState();
	    });

    // Termine laden
    async function loadSlots() {
      const loadingEl = document.getElementById('slots-loading');
      const listEl = document.getElementById('slots-list');
      const noSlotsEl = document.getElementById('no-slots');

      if (loadingEl) loadingEl.classList.remove('hidden');
      if (listEl) listEl.classList.add('hidden');
      if (noSlotsEl) noSlotsEl.classList.add('hidden');

      try {
        const response = await fetch('/api/admin/slots', {
          headers: {
            'Authorization': `Basic ${authCredentials}`
          }
        });

        if (!response.ok) throw new Error('Failed to load slots');

        const slots = await response.json();

        if (loadingEl) loadingEl.classList.add('hidden');

        if (slots.length === 0) {
          if (noSlotsEl) noSlotsEl.classList.remove('hidden');
          return;
        }

	        if (listEl) {
	          listEl.innerHTML = slots.map((slot: any) => `
	            <div class="slot-card" data-id="${slot.id}">
	              <div class="slot-info">
	                <div class="slot-date">${formatDate(slot.date)}</div>
	                <div class="slot-time">${slot.time}${slot.endTime ? ' - ' + slot.endTime : ''} Uhr</div>
	                <div class="slot-capacity">
	                  ${slot.available} / ${slot.maxCapacity} Pl√§tze frei
	                </div>
	              </div>
	              <div class="slot-actions">
	                <button class="btn btn-secondary btn-edit" data-id="${slot.id}">Bearbeiten</button>
	                <button class="btn btn-danger btn-delete" data-id="${slot.id}">L√∂schen</button>
	              </div>
	            </div>
	          `).join('');
          listEl.classList.remove('hidden');

          // Delete-Handler
          listEl.querySelectorAll('.btn-delete').forEach(btn => {
            btn.addEventListener('click', async (e) => {
              const id = (e.target as HTMLElement).dataset.id;
              if (confirm('Termin wirklich l√∂schen?')) {
                await deleteSlot(id!);
              }
            });
          });

	          // Edit-Handler
	          listEl.querySelectorAll('.btn-edit').forEach(btn => {
	            btn.addEventListener('click', (e) => {
	              const id = (e.target as HTMLElement).dataset.id;
	              const slot = (slots as any[]).find(s => s.id === id);
	              if (slot) {
	                startEditSlot(slot);
	              }
	            });
	          });
        }
      } catch (error) {
        console.error('Error loading slots:', error);
        if (loadingEl) loadingEl.classList.add('hidden');
      }
    }

    // Termin l√∂schen
    async function deleteSlot(id: string) {
      try {
        const response = await fetch('/api/admin/slots', {
          method: 'DELETE',
          headers: {
            'Authorization': `Basic ${authCredentials}`,
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ id })
        });

        if (response.ok) {
          loadSlots();
        } else {
          alert('Fehler beim L√∂schen');
        }
      } catch (error) {
        console.error('Error deleting slot:', error);
      }
    }

	    // Formular in Bearbeitungsmodus versetzen
	    function startEditSlot(slot: any) {
	      editingSlotId = slot.id;

	      const dateInput = document.getElementById('slot-date') as HTMLInputElement | null;
	      const startInput = document.getElementById('slot-start-time') as HTMLInputElement | null;
	      const endInput = document.getElementById('slot-end-time') as HTMLInputElement | null;
	      const capacityInput = document.getElementById('slot-capacity') as HTMLInputElement | null;
	      const initialBookedInput = document.getElementById('slot-initial-booked') as HTMLInputElement | null;
	      const titleEl = document.getElementById('slot-form-title');
	      const submitBtn = document.getElementById('slot-submit-btn') as HTMLButtonElement | null;
	      const cancelBtn = document.getElementById('cancel-edit-btn');

	      if (dateInput) dateInput.value = slot.date;
	      if (startInput) startInput.value = slot.time;
	      if (endInput) endInput.value = slot.endTime || '';
	      if (capacityInput) capacityInput.value = String(slot.maxCapacity);

	      // Bereits gebuchte Pl√§tze nur anzeigen, nicht bearbeitbar
	      const bookedCount = slot.maxCapacity - slot.available;
	      if (initialBookedInput) {
	        initialBookedInput.value = String(bookedCount);
	        initialBookedInput.disabled = true;
	      }

	      if (titleEl) titleEl.textContent = 'Termin bearbeiten';
	      if (submitBtn) submitBtn.textContent = 'Termin aktualisieren';
	      if (cancelBtn) cancelBtn.classList.remove('hidden');

	      const formEl = document.getElementById('add-slot-form') as HTMLElement | null;
	      if (formEl && 'scrollIntoView' in formEl) {
	        formEl.scrollIntoView({ behavior: 'smooth', block: 'start' });
	      }
	    }

	    // Formular-Zustand zur√ºcksetzen (Neuen-Termin-Modus)
	    function resetSlotFormState() {
	      editingSlotId = null;

	      const initialBookedInput = document.getElementById('slot-initial-booked') as HTMLInputElement | null;
	      const titleEl = document.getElementById('slot-form-title');
	      const submitBtn = document.getElementById('slot-submit-btn') as HTMLButtonElement | null;
	      const cancelBtn = document.getElementById('cancel-edit-btn');

	      if (initialBookedInput) {
	        initialBookedInput.disabled = false;
	        if (!initialBookedInput.value) {
	          initialBookedInput.value = '0';
	        }
	      }

	      if (titleEl) titleEl.textContent = 'Neuen Termin hinzuf√ºgen';
	      if (submitBtn) submitBtn.textContent = 'Termin hinzuf√ºgen';
	      if (cancelBtn && !cancelBtn.classList.contains('hidden')) {
	        cancelBtn.classList.add('hidden');
	      }
	    }

	    // Datum formatieren
	    function formatDate(dateStr: string) {
	      const date = new Date(dateStr + 'T00:00:00');
	      return date.toLocaleDateString('de-DE', {
	        weekday: 'long',
	        year: 'numeric',
	        month: 'long',
	        day: 'numeric'
	      });
	    }

	    // Setze Mindestdatum auf heute
	    const dateInput = document.getElementById('slot-date') as HTMLInputElement;
	    if (dateInput) {
	      const today = new Date().toISOString().split('T')[0];
	      dateInput.min = today;
	    }
  </script>
</body>
</html>

