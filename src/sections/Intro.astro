---
import { content } from '../data/content';
---

<section class="intro">
  <div class="container">
    <p class="intro__text">{content.intro.text}</p>
  </div>
</section>

<style>
  .intro {
    padding: var(--space-12) var(--gutter);
    background-color: var(--color-background);
  }

  .container {
    max-width: var(--max-width);
    margin: 0 auto;
    opacity: 0;
    transform: translateY(30px);
    animation: fadeInUp 1s ease forwards;
    animation-delay: 0.3s;
  }

  @keyframes fadeInUp {
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .intro__text {
    font-size: 1.25rem;
    line-height: 1.6;
    text-align: center;
    color: var(--color-text-secondary);
    max-width: 700px;
    margin: 0 auto;
  }

  @media (min-width: 768px) {
    .intro__text {
      font-size: 1.5rem;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .container {
      animation: none;
      opacity: 1;
      transform: none;
    }
  }
</style>
