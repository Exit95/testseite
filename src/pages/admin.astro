    // Chunk-Upload-Funktion - ALLE Chunks in EINEM Request
    async function uploadFileInChunks(file: File, category: string, onProgress: (progress: number) => void) {
      const totalChunks = Math.ceil(file.size / CHUNK_SIZE);
      const uniqueFilename = `${Date.now()}_${file.name}`;

      console.log(`üì¶ Starting upload: ${file.name}`);
      console.log(`   Category: ${category}`);
      console.log(`   Size: ${formatFileSize(file.size)}`);
      console.log(`   Chunks: ${totalChunks}`);
      console.log(`   Unique filename: ${uniqueFilename}`);

      const formData = new FormData();

      // WICHTIG: Metadaten ZUERST anh√§ngen!
      formData.append('filename', uniqueFilename);
      formData.append('category', category);
      formData.append('totalChunks', String(totalChunks));
      formData.append('fileSize', String(file.size));

      console.log('üìù Metadata added to FormData');

      // Dann alle Chunks anh√§ngen
      for (let chunkIndex = 0; chunkIndex < totalChunks; chunkIndex++) {
        const start = chunkIndex * CHUNK_SIZE;
        const end = Math.min(start + CHUNK_SIZE, file.size);
        const chunk = file.slice(start, end);

        // Chunks als chunk_0, chunk_1, etc.
        formData.append(`chunk_${chunkIndex}`, chunk, `chunk_${chunkIndex}`);

        // Progress w√§hrend des Chunk-Erstellens
        const progress = ((chunkIndex + 1) / totalChunks) * 50; // 50% f√ºr Vorbereitung
        onProgress(progress);
      }

      console.log(`‚úÖ All ${totalChunks} chunks prepared`);
      console.log('üöÄ Starting upload to /api/upload...');

      // Upload mit Timeout (20 Minuten)
      const controller = new AbortController();
      const timeoutId = setTimeout(() => {
        console.error('‚è±Ô∏è Upload timeout after 20 minutes!');
        controller.abort();
      }, 1200000); // 20 Min

      try {
        onProgress(55); // Zeige dass Upload startet

        const response = await fetch('/api/images', {
          method: 'POST',
          headers: {
            'Authorization': `Basic ${authCredentials}`
          },
          body: formData,
          signal: controller.signal
        });

        clearTimeout(timeoutId);

        console.log(`üì° Response received: ${response.status} ${response.statusText}`);

        if (!response.ok) {
          const errorText = await response.text();
          console.error('‚ùå Upload failed:', errorText);
          let errorData;
          try {
            errorData = JSON.parse(errorText);
          } catch {
            errorData = { error: errorText };
          }
          throw new Error(errorData.error || 'Upload failed');
        }

        const result = await response.json();
        console.log('‚úÖ Upload successful:', result);

        onProgress(100); // Upload abgeschlossen

        return result;
      } catch (error) {
        clearTimeout(timeoutId);
        console.error('‚ùå Upload error:', error);
        if (error instanceof Error) {
          console.error('   Message:', error.message);
          console.error('   Stack:', error.stack);
        }
        throw error;
      }
    }

