---
import Button from "../components/Button.astro";
import WhatsAppLink from "../components/WhatsAppLink.astro";
import InstagramLink from "../components/InstagramLink.astro";
import { content } from "../data/content";
---

<section class="hero">
  <div class="hero__content">
	    <div class="hero__logo-card">
	      <div class="hero__logo-card-inner">
	        <img
		          src="/auszeit2.png"
	          alt="Auszeit Keramik Malatelier"
	          class="hero__logo-image"
	        />
	      </div>
	    </div>
    <div class="hero__actions">
      <WhatsAppLink
        phone={content.contact.whatsapp}
        message={content.contact.whatsappMessage}
        text={content.hero.ctaSecondary}
      />
      <Button href="#calendar-section" variant="primary" size="large">
        {content.hero.ctaPrimary}
      </Button>
      <InstagramLink
        url="https://www.instagram.com/auszeit_keramik_malatelier?igsh=MW90eGY0cGxlemt5cw=="
        text={content.hero.ctaTertiary}
      />
    </div>
  </div>
</section>

<style>
	  .hero {
	    display: flex;
	    align-items: center;
	    justify-content: center;
	    background: linear-gradient(
	      135deg,
	      var(--color-clay-brown) 0%,
	      var(--color-warm-beige) 100%
	    );
	    padding: var(--space-2) var(--gutter);
	    text-align: center;
	    position: relative;
	    overflow: hidden;
	  }

	  .hero__logo-card {
	    display: flex;
	    justify-content: center;
	    margin-bottom: var(--space-1);
	  }

	  .hero__logo-card-inner {
	    background: transparent;
	    padding: var(--space-3) var(--space-4);
	    border-radius: 20px;
	    box-shadow: none;
	    border: 0;
	    max-width: min(440px, 85vw);
	    backdrop-filter: none;
	  }

	  .hero__logo-image {
	    width: 100%;
	    height: auto;
	    display: block;
	    margin: 0 auto;
	    border-radius: 14px;
	  }

  .hero::before {
    content: "";
    position: absolute;
    inset: 0;
    background-image: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23ffffff' fill-opacity='0.03'%3E%3Cpath d='M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E");
    opacity: 0.5;
  }

  .hero__content {
    position: relative;
    z-index: 1;
    max-width: 800px;
    width: 100%;
    animation: fadeIn var(--duration-slow) var(--easing);
  }

  .hero__claim {
    font-size: 1.125rem;
    color: var(--color-off-white);
	    margin-top: 0;
	    margin-bottom: var(--space-5);
    font-weight: 500;
    line-height: 1.6;
  }

  .hero__actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-3);
  }

  /* Sehr kleine Bildschirme (< 375px) */
	  @media (max-width: 374px) {
	    .hero {
	      padding: var(--space-2) var(--gutter);
	    }

	    .hero__logo-card-inner {
	      padding: var(--space-3) var(--space-3);
	      border-radius: 18px;
	    }

    .hero__claim {
      font-size: 1rem;
      margin-top: var(--space-3);
      margin-bottom: var(--space-4);
    }

    .hero__actions {
      width: 100%;
      gap: var(--space-2);
      margin: 0 auto;
    }
  }

  /* Kleine Smartphones (375px - 479px) */
  @media (min-width: 375px) and (max-width: 479px) {
	    .hero__claim {
	      font-size: 1.2rem;
	    }

	    .hero__actions {
      width: 100%;
      max-width: 320px;
      margin: 0 auto;
    }
  }

  /* Größere Smartphones (480px - 639px) */
  @media (min-width: 480px) and (max-width: 639px) {
    .hero__claim {
      font-size: 1.3rem;
    }

    .hero__actions {
      max-width: 400px;
      margin: 0 auto;
    }
  }

	  @media (min-width: 640px) {

    .hero__actions {
      flex-direction: row;
      justify-content: center;
      flex-wrap: wrap;
    }

    .hero__claim {
      font-size: 1.5rem;
    }
  }

	  @media (min-width: 768px) {
    .hero__claim {
      font-size: 1.75rem;
    }
  }

  @media (max-width: 639px) {
    .hero__actions {
      width: 100%;
      max-width: 300px;
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .hero__content {
      animation: none;
    }
  }
</style>
