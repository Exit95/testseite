export const prerender = false;
---

<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Admin - Terminverwaltung | Atelier Auszeit</title>
  <link rel="stylesheet" href="/admin-styles.css">
</head>
<body>
  <div id="login-screen" class="login-container">
    <div class="login-box">
      <h1>üé® Admin Login</h1>
      <p>Atelier Auszeit</p>
      <form id="login-form">
        <div class="form-group">
          <label for="username">Benutzername</label>
          <input type="text" id="username" name="username" value="admin" required>
        </div>
        <div class="form-group">
          <label for="password">Passwort</label>
          <input type="password" id="password" name="password" required>
        </div>
        <button type="submit" class="btn btn-primary">Anmelden</button>
        <div id="login-error" class="error-message hidden"></div>
      </form>
    </div>
  </div>

	  <div id="admin-panel" class="admin-container hidden">
	    <header class="admin-header">
	      <h1>üé® Terminverwaltung</h1>
	      <button id="logout-btn" class="btn btn-secondary">Abmelden</button>
	    </header>
	
	    		<main class="admin-main">
			      <section class="dashboard-section">
			        <h2>√úbersicht</h2>
			        <div class="dashboard-grid">
			          <div class="dashboard-card">
			            <div class="dashboard-label">Termine heute</div>
			            <div class="dashboard-value" id="dashboard-today-count">-</div>
			          </div>
			          <div class="dashboard-card">
			            <div class="dashboard-label">Neue Anfragen</div>
			            <div class="dashboard-value" id="dashboard-new-count">-</div>
			          </div>
			          <div class="dashboard-card">
			            <div class="dashboard-label">Best√§tigt</div>
			            <div class="dashboard-value" id="dashboard-confirmed-count">-</div>
			          </div>
			          <div class="dashboard-card">
			            <div class="dashboard-label">Offene Stornierungen</div>
			            <div class="dashboard-value" id="dashboard-cancelled-count">-</div>
			          </div>
			          <div class="dashboard-card">
			            <div class="dashboard-label">N√§chste 7 Tage</div>
			            <div class="dashboard-value" id="dashboard-next7-count">-</div>
			          </div>
			        </div>
			      </section>
			      <section class="add-slot-section">
		        <h2 id="slot-form-title">Neuen Termin hinzuf√ºgen</h2>
		        <form id="add-slot-form">
		          <div class="form-row">
		            <div class="form-group">
		              <label for="slot-date">Datum</label>
		              <input type="date" id="slot-date" name="date" required>
		            </div>
		            <div class="form-group">
		              <label for="slot-start-time">Beginn</label>
		              <input type="time" id="slot-start-time" name="startTime" required>
		            </div>
		            <div class="form-group">
		              <label for="slot-end-time">Ende</label>
		              <input type="time" id="slot-end-time" name="endTime" required>
		            </div>
		            <div class="form-group">
		              <label for="slot-capacity">Max. Personen</label>
		              <input type="number" id="slot-capacity" name="maxCapacity" min="1" max="20" value="15" required>
		            </div>
		            <div class="form-group">
		              <label for="slot-initial-booked">Bereits gebuchte Pl√§tze</label>
		              <input type="number" id="slot-initial-booked" name="initialBooked" min="0" max="20" value="0">
		            </div>
		          </div>
		          <div class="form-actions">
		            <button type="submit" class="btn btn-primary" id="slot-submit-btn">Termin hinzuf√ºgen</button>
		            <button type="button" class="btn btn-secondary hidden" id="cancel-edit-btn">Bearbeitung abbrechen</button>
		          </div>
		        </form>
		      </section>

	      <section class="slots-section">
	        <h2>Verf√ºgbare Termine</h2>
	        <div id="slots-loading" class="loading">Lade Termine...</div>
	        <div id="slots-list" class="slots-list hidden"></div>
	        <div id="no-slots" class="no-data hidden">Keine Termine vorhanden</div>
	      </section>

	      <section class="bookings-section">
	        <h2>Buchungen</h2>
	        <div id="bookings-loading" class="loading">Lade Buchungen...</div>
	        <div id="bookings-list" class="slots-list hidden"></div>
	        <div id="no-bookings" class="no-data hidden">Keine Buchungen vorhanden</div>
	      </section>
	    </main>
  </div>

	  <script>
	    let authCredentials = '';
	    let editingSlotId: string | null = null;

    // Login-Handler
    document.getElementById('login-form')?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const formData = new FormData(e.target as HTMLFormElement);
      const username = formData.get('username');
      const password = formData.get('password');

      authCredentials = btoa(`${username}:${password}`);

      try {
        const response = await fetch('/api/admin/slots', {
          headers: {
            'Authorization': `Basic ${authCredentials}`
          }
        });

        if (response.ok) {
          document.getElementById('login-screen')?.classList.add('hidden');
          document.getElementById('admin-panel')?.classList.remove('hidden');
	          loadSlots();
	          loadBookings();
        } else {
          const errorEl = document.getElementById('login-error');
          if (errorEl) {
            errorEl.textContent = 'Ung√ºltige Anmeldedaten';
            errorEl.classList.remove('hidden');
          }
        }
      } catch (error) {
        console.error('Login error:', error);
      }
    });

    // Logout
    document.getElementById('logout-btn')?.addEventListener('click', () => {
      authCredentials = '';
      document.getElementById('admin-panel')?.classList.add('hidden');
      document.getElementById('login-screen')?.classList.remove('hidden');
      (document.getElementById('login-form') as HTMLFormElement)?.reset();
    });

	    // Termin hinzuf√ºgen / bearbeiten
	    document.getElementById('add-slot-form')?.addEventListener('submit', async (e) => {
	      e.preventDefault();
	      const form = e.target as HTMLFormElement;
	      const formData = new FormData(form);

	      const baseData = {
	        date: formData.get('date'),
	        startTime: formData.get('startTime'),
	        endTime: formData.get('endTime'),
	        maxCapacity: formData.get('maxCapacity')
	      };

	      try {
	        let response: Response;

	        if (editingSlotId) {
	          // Vorhandenen Termin aktualisieren
	          const updatePayload = {
	            id: editingSlotId,
	            ...baseData
	          };

	          response = await fetch('/api/admin/slots', {
	            method: 'PUT',
	            headers: {
	              'Authorization': `Basic ${authCredentials}`,
	              'Content-Type': 'application/json'
	            },
	            body: JSON.stringify(updatePayload)
	          });
	        } else {
	          // Neuen Termin anlegen
	          const data = {
	            ...baseData,
	            initialBooked: formData.get('initialBooked') || '0'
	          };

	          response = await fetch('/api/admin/slots', {
	            method: 'POST',
	            headers: {
	              'Authorization': `Basic ${authCredentials}`,
	              'Content-Type': 'application/json'
	            },
	            body: JSON.stringify(data)
	          });
	        }

	        if (response.ok) {
	          form.reset();
	          resetSlotFormState();
	          loadSlots();
	        } else {
	          const errorText = await response.text().catch(() => '');
	          console.error('Error saving slot:', errorText);
	          alert('Fehler beim Speichern des Termins');
	        }
	      } catch (error) {
	        console.error('Error saving slot:', error);
	        alert('Fehler beim Speichern des Termins');
	      }
	    });

	    // Bearbeitung abbrechen
	    document.getElementById('cancel-edit-btn')?.addEventListener('click', () => {
	      const form = document.getElementById('add-slot-form') as HTMLFormElement | null;
	      if (form) {
	        form.reset();
	      }
	      resetSlotFormState();
	    });

    // Termine laden
    async function loadSlots() {
      const loadingEl = document.getElementById('slots-loading');
      const listEl = document.getElementById('slots-list');
      const noSlotsEl = document.getElementById('no-slots');

      if (loadingEl) loadingEl.classList.remove('hidden');
      if (listEl) listEl.classList.add('hidden');
      if (noSlotsEl) noSlotsEl.classList.add('hidden');

      try {
        const response = await fetch('/api/admin/slots', {
          headers: {
            'Authorization': `Basic ${authCredentials}`
          }
        });

        if (!response.ok) throw new Error('Failed to load slots');

        const slots = await response.json();

        if (loadingEl) loadingEl.classList.add('hidden');

        if (slots.length === 0) {
          if (noSlotsEl) noSlotsEl.classList.remove('hidden');
          return;
        }

	        if (listEl) {
	          listEl.innerHTML = slots.map((slot: any) => `
	            <div class="slot-card" data-id="${slot.id}">
	              <div class="slot-info">
	                <div class="slot-date">${formatDate(slot.date)}</div>
	                <div class="slot-time">${slot.time}${slot.endTime ? ' - ' + slot.endTime : ''} Uhr</div>
	                <div class="slot-capacity">
	                  ${slot.available} / ${slot.maxCapacity} Pl√§tze frei
	                </div>
	              </div>
	              <div class="slot-actions">
	                <button class="btn btn-secondary btn-edit" data-id="${slot.id}">Bearbeiten</button>
	                <button class="btn btn-danger btn-delete" data-id="${slot.id}">L√∂schen</button>
	              </div>
	            </div>
	          `).join('');
          listEl.classList.remove('hidden');

          // Delete-Handler
          listEl.querySelectorAll('.btn-delete').forEach(btn => {
            btn.addEventListener('click', async (e) => {
              const id = (e.target as HTMLElement).dataset.id;
              if (confirm('Termin wirklich l√∂schen?')) {
                await deleteSlot(id!);
              }
            });
          });

	          // Edit-Handler
	          listEl.querySelectorAll('.btn-edit').forEach(btn => {
	            btn.addEventListener('click', (e) => {
	              const id = (e.target as HTMLElement).dataset.id;
	              const slot = (slots as any[]).find(s => s.id === id);
	              if (slot) {
	                startEditSlot(slot);
	              }
	            });
	          });
        }
      } catch (error) {
        console.error('Error loading slots:', error);
        if (loadingEl) loadingEl.classList.add('hidden');
      }
    }

		    // Dashboard-Kennzahlen aktualisieren
		    function updateDashboard(bookings: any[]) {
		      const today = new Date();
		      today.setHours(0, 0, 0, 0);
		      const todayStr = today.toISOString().split('T')[0];
		      const sevenDaysAhead = new Date(today);
		      sevenDaysAhead.setDate(sevenDaysAhead.getDate() + 7);

		      let todayCount = 0;
		      let newCount = 0;
		      let confirmedCount = 0;
		      let cancelledCount = 0;
		      let next7Count = 0;

		      (bookings as any[]).forEach((b) => {
		        if (!b.slotDate) return;
		        const slotDate = new Date(b.slotDate + 'T00:00:00');
		        const status = b.status || 'confirmed';

		        const isToday = b.slotDate === todayStr;
		        const isFutureOrToday = slotDate >= today;
		        const isWithinNext7 = slotDate >= today && slotDate <= sevenDaysAhead;

		        if (isToday && status !== 'cancelled') {
		          todayCount += 1;
		        }

		        if (isFutureOrToday) {
		          if (status === 'pending') newCount += 1;
		          if (status === 'confirmed') confirmedCount += 1;
		          if (status === 'cancelled') cancelledCount += 1;
		        }

		        if (isWithinNext7 && status !== 'cancelled') {
		          next7Count += 1;
		        }
		      });

		      const todayEl = document.getElementById('dashboard-today-count');
		      if (todayEl) todayEl.textContent = String(todayCount);

		      const newEl = document.getElementById('dashboard-new-count');
		      if (newEl) newEl.textContent = String(newCount);

		      const confirmedEl = document.getElementById('dashboard-confirmed-count');
		      if (confirmedEl) confirmedEl.textContent = String(confirmedCount);

		      const cancelledEl = document.getElementById('dashboard-cancelled-count');
		      if (cancelledEl) cancelledEl.textContent = String(cancelledCount);

		      const next7El = document.getElementById('dashboard-next7-count');
		      if (next7El) next7El.textContent = String(next7Count);
		    }

		    // Buchungen laden
		    async function loadBookings() {
	      const loadingEl = document.getElementById('bookings-loading');
	      const listEl = document.getElementById('bookings-list');
	      const noBookingsEl = document.getElementById('no-bookings');

	      if (loadingEl) loadingEl.classList.remove('hidden');
	      if (listEl) listEl.classList.add('hidden');
	      if (noBookingsEl) noBookingsEl.classList.add('hidden');

		      try {
		        const response = await fetch('/api/admin/bookings', {
		          headers: {
		            'Authorization': `Basic ${authCredentials}`,
		          },
		        });
		
		        if (!response.ok) throw new Error('Failed to load bookings');
		
		        const bookings = await response.json();
		
		        // Dashboard aktualisieren (auch wenn es keine aktiven Buchungen mehr gibt)
		        updateDashboard(bookings as any[]);
		
		        if (loadingEl) loadingEl.classList.add('hidden');
		
		        // Nur wirklich gesetzte, zuk√ºnftige Buchungen anzeigen.
		        // Falls der zugeh√∂rige Slot nicht mehr existiert (z.B. Termin gel√∂scht),
		        // zeigen wir die Buchung trotzdem an, damit nichts "verschwindet".
		        const today = new Date();
		        today.setHours(0, 0, 0, 0);
		
		        const activeBookings = (bookings as any[])
		          .filter((b) => {
		            if (b.status === 'cancelled') return false;
		
		            if (b.slotDate) {
		              const slotDate = new Date(b.slotDate + 'T00:00:00');
		              return slotDate >= today;
		            }
		
		            // Fallback: Wenn kein Slot mehr gefunden wird, Buchung trotzdem anzeigen
		            return true;
		          })
		          .sort((a, b) => {
		            const aDateBase = a.slotDate || (a.createdAt ? String(a.createdAt).split('T')[0] : '');
		            const bDateBase = b.slotDate || (b.createdAt ? String(b.createdAt).split('T')[0] : '');
		
		            if (!aDateBase || !bDateBase) return 0;
		
		            const aDate = new Date(`${aDateBase}T${a.slotTime || '00:00'}:00`);
		            const bDate = new Date(`${bDateBase}T${b.slotTime || '00:00'}:00`);
		            return aDate.getTime() - bDate.getTime();
		          });

	        if (activeBookings.length === 0) {
	          if (noBookingsEl) noBookingsEl.classList.remove('hidden');
	          return;
	        }

		        if (listEl) {
		          listEl.innerHTML = activeBookings
		            .map((booking: any) => {
		              const dateLabel = booking.slotDate
		                ? formatDate(booking.slotDate)
		                : 'Kein Datum';
		              const timeLabel = booking.slotTime
		                ? `${booking.slotTime}${booking.slotEndTime ? ' - ' + booking.slotEndTime : ''} Uhr`
		                : '';

		              const status = booking.status || 'confirmed';
		              let statusLabel = 'Best√§tigt';
		              let statusClass = 'booking-status--confirmed';
		              if (status === 'pending') {
		                statusLabel = 'Neu / unbest√§tigt';
		                statusClass = 'booking-status--pending';
		              } else if (status === 'cancelled') {
		                statusLabel = 'Abgesagt';
		                statusClass = 'booking-status--cancelled';
		              }

		              const showConfirm = status === 'pending';
		              const showCancel = status !== 'cancelled';

		              return `
		                <div class="slot-card booking-card" data-id="${booking.id}">
		                  <div class="slot-info booking-info">
		                    <div class="booking-main">
		                      <div>
		                        <div class="slot-date">${dateLabel}</div>
		                        <div class="slot-time">${timeLabel}</div>
		                      </div>
		                      <div class="booking-status ${statusClass}">${statusLabel}</div>
		                    </div>
		                    <div class="booking-customer">
		                      <div><strong>${booking.name}</strong>${booking.email ? ` (${booking.email})` : ''}</div>
		                      <div>${booking.participants} Person(en)</div>
		                    </div>
		                  </div>
		                  <div class="slot-actions booking-actions">
		                    ${showConfirm ? `<button class="btn btn-success btn-confirm-booking" data-id="${booking.id}">‚úì Best√§tigen</button>` : ''}
		                    ${showCancel ? `<button class="btn btn-danger btn-cancel-booking" data-id="${booking.id}">‚úï Absagen</button>` : ''}
		                    <button class="btn btn-secondary btn-edit-booking" data-id="${booking.id}">‚úé Bearbeiten</button>
		                  </div>
		                </div>
		              `;
		            })
		            .join('');
		
		          listEl.classList.remove('hidden');
		
		          // Cancel-Handler
		          listEl.querySelectorAll('.btn-cancel-booking').forEach((btn) => {
		            btn.addEventListener('click', async (e) => {
		              const id = (e.target as HTMLElement).dataset.id;
		              if (id && confirm('Buchung wirklich stornieren?')) {
		                await cancelBookingAdmin(id);
		              }
		            });
		          });
		
		          // Confirm-Handler
		          listEl.querySelectorAll('.btn-confirm-booking').forEach((btn) => {
		            btn.addEventListener('click', async (e) => {
		              const id = (e.target as HTMLElement).dataset.id;
		              if (id && confirm('Buchung als best√§tigt markieren?')) {
		                await confirmBookingAdmin(id);
		              }
		            });
		          });
		
		          // Edit-Handler (Teilnehmerzahl & Notizen mit einfachen Prompts bearbeiten)
		          listEl.querySelectorAll('.btn-edit-booking').forEach((btn) => {
		            btn.addEventListener('click', async (e) => {
		              const id = (e.target as HTMLElement).dataset.id;
		              if (!id) return;

		              const booking = (activeBookings as any[]).find((b) => b.id === id);
		              if (!booking) return;

		              const participantsInput = prompt('Anzahl Personen', String(booking.participants || 1));
		              if (participantsInput === null) return;
		              const participants = parseInt(participantsInput, 10);
		              if (!Number.isFinite(participants) || participants <= 0) {
		                alert('Bitte eine g√ºltige Personenzahl eingeben.');
		                return;
		              }

		              const notesInput = prompt('Notizen (optional)', booking.notes || '');
		              try {
		                const response = await fetch('/api/admin/bookings', {
		                  method: 'PUT',
		                  headers: {
		                    'Authorization': `Basic ${authCredentials}`,
		                    'Content-Type': 'application/json',
		                  },
		                  body: JSON.stringify({
		                    id,
		                    participants,
		                    notes: notesInput ?? '',
		                  }),
		                });
		
		                if (response.ok) {
		                  await loadBookings();
		                  await loadSlots();
		                } else {
		                  const result = await response.json().catch(() => null);
		                  const message = result?.error || 'Fehler beim Aktualisieren der Buchung';
		                  alert(message);
		                }
		              } catch (error) {
		                console.error('Error updating booking:', error);
		                alert('Fehler beim Aktualisieren der Buchung');
		              }
		            });
		          });
		        }
	      } catch (error) {
	        console.error('Error loading bookings:', error);
	        if (loadingEl) loadingEl.classList.add('hidden');
	      }
	    }

    // Termin l√∂schen
    async function deleteSlot(id: string) {
      try {
        const response = await fetch('/api/admin/slots', {
          method: 'DELETE',
          headers: {
            'Authorization': `Basic ${authCredentials}`,
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ id })
        });

        if (response.ok) {
          loadSlots();
        } else {
          alert('Fehler beim L√∂schen');
        }
      } catch (error) {
        console.error('Error deleting slot:', error);
      }
    }

		    // Buchung stornieren
		    async function cancelBookingAdmin(id: string) {
	      try {
	        const response = await fetch('/api/admin/bookings', {
	          method: 'POST',
	          headers: {
	            'Authorization': `Basic ${authCredentials}`,
	            'Content-Type': 'application/json',
	          },
	          body: JSON.stringify({ id }),
	        });

	        if (response.ok) {
	          // Buchungen neu laden und Slots aktualisieren, damit Pl√§tze wieder sichtbar sind
	          await loadBookings();
	          await loadSlots();
	        } else {
	          alert('Fehler beim Stornieren der Buchung');
	        }
	      } catch (error) {
	        console.error('Error cancelling booking:', error);
	        alert('Fehler beim Stornieren der Buchung');
	      }
	    }

		    // Buchung als best√§tigt markieren
		    async function confirmBookingAdmin(id: string) {
		      try {
		        const response = await fetch('/api/admin/bookings', {
		          method: 'POST',
		          headers: {
		            'Authorization': `Basic ${authCredentials}`,
		            'Content-Type': 'application/json',
		          },
		          body: JSON.stringify({ id, action: 'confirm' }),
		        });
		
		        if (response.ok) {
		          await loadBookings();
		        } else {
		          alert('Fehler beim Best√§tigen der Buchung');
		        }
		      } catch (error) {
		        console.error('Error confirming booking:', error);
		        alert('Fehler beim Best√§tigen der Buchung');
		      }
		    }

	    // Formular in Bearbeitungsmodus versetzen
	    function startEditSlot(slot: any) {
	      editingSlotId = slot.id;

	      const dateInput = document.getElementById('slot-date') as HTMLInputElement | null;
	      const startInput = document.getElementById('slot-start-time') as HTMLInputElement | null;
	      const endInput = document.getElementById('slot-end-time') as HTMLInputElement | null;
	      const capacityInput = document.getElementById('slot-capacity') as HTMLInputElement | null;
	      const initialBookedInput = document.getElementById('slot-initial-booked') as HTMLInputElement | null;
	      const titleEl = document.getElementById('slot-form-title');
	      const submitBtn = document.getElementById('slot-submit-btn') as HTMLButtonElement | null;
	      const cancelBtn = document.getElementById('cancel-edit-btn');

	      if (dateInput) dateInput.value = slot.date;
	      if (startInput) startInput.value = slot.time;
	      if (endInput) endInput.value = slot.endTime || '';
	      if (capacityInput) capacityInput.value = String(slot.maxCapacity);

	      // Bereits gebuchte Pl√§tze nur anzeigen, nicht bearbeitbar
	      const bookedCount = slot.maxCapacity - slot.available;
	      if (initialBookedInput) {
	        initialBookedInput.value = String(bookedCount);
	        initialBookedInput.disabled = true;
	      }

	      if (titleEl) titleEl.textContent = 'Termin bearbeiten';
	      if (submitBtn) submitBtn.textContent = 'Termin aktualisieren';
	      if (cancelBtn) cancelBtn.classList.remove('hidden');

	      const formEl = document.getElementById('add-slot-form') as HTMLElement | null;
	      if (formEl && 'scrollIntoView' in formEl) {
	        formEl.scrollIntoView({ behavior: 'smooth', block: 'start' });
	      }
	    }

	    // Formular-Zustand zur√ºcksetzen (Neuen-Termin-Modus)
	    function resetSlotFormState() {
	      editingSlotId = null;

	      const initialBookedInput = document.getElementById('slot-initial-booked') as HTMLInputElement | null;
	      const titleEl = document.getElementById('slot-form-title');
	      const submitBtn = document.getElementById('slot-submit-btn') as HTMLButtonElement | null;
	      const cancelBtn = document.getElementById('cancel-edit-btn');

	      if (initialBookedInput) {
	        initialBookedInput.disabled = false;
	        if (!initialBookedInput.value) {
	          initialBookedInput.value = '0';
	        }
	      }

	      if (titleEl) titleEl.textContent = 'Neuen Termin hinzuf√ºgen';
	      if (submitBtn) submitBtn.textContent = 'Termin hinzuf√ºgen';
	      if (cancelBtn && !cancelBtn.classList.contains('hidden')) {
	        cancelBtn.classList.add('hidden');
	      }
	    }

	    // Datum formatieren
	    function formatDate(dateStr: string) {
	      const date = new Date(dateStr + 'T00:00:00');
